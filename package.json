{
  "name": "ledger-live-desktop-v2",
  "productName": "Ledger Live",
  "description": "Ledger Live - Desktop",
  "version": "1.0.0",
  "author": "Ledger Live Team <team-live@ledger.fr>",
  "license": "MIT",
  "private": true,
  "main": "./.webpack/main.bundle.js",
  "scripts": {
    "dev": "NODE_ENV=development node ./tools/main.js",
    "build": "NODE_ENV=production node ./tools/main.js build",
    "lint": "eslint src tools",
    "prettier": "prettier --write \"{src,tools}/**/*.{js,json}\"",
    "prettier:check": "prettier -c \"{src,tools}/**/*.{js,json}\"",
    "flow-typed": "yarn run install-flow-typed",
    "install-flow-typed": "flow-typed install -s",
    "install-deps": "electron-builder install-app-deps",
    "dist:internal": "DEBUG=electron-builder NODE_ENV=production electron-builder",
    "dist": "node ./tools/dist.js",
    "pack": "node ./tools/dist.js -p",
    "nightly": "node ./tools/dist.js -n",
    "ci": "node ./tools/ci.js"
  },
  "engines": {
    "node": ">=12"
  },
  "dependencies": {
    "@hot-loader/react-dom": "^16.11.0",
    "electron-context-menu": "^0.15.1",
    "i18next": "^19.0.1",
    "lodash": "^4.17.15",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "react-hot-loader": "^4.12.18",
    "react-i18next": "^11.2.5",
    "react-redux": "^7.1.3",
    "redux": "^4.0.4",
    "rxjs": "^6.5.3",
    "source-map-support": "^0.5.16",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.7.4",
    "@babel/plugin-proposal-class-properties": "^7.7.4",
    "@babel/plugin-proposal-export-default-from": "^7.7.4",
    "@babel/plugin-proposal-export-namespace-from": "^7.7.4",
    "@babel/plugin-syntax-dynamic-import": "^7.7.4",
    "@babel/plugin-syntax-import-meta": "^7.7.4",
    "@babel/preset-env": "^7.7.4",
    "@babel/preset-flow": "^7.7.4",
    "@babel/preset-react": "^7.7.4",
    "babel": "^6.23.0",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.0.6",
    "cli-progress": "^3.4.0",
    "css-loader": "^3.2.1",
    "electron": "^7.1.4",
    "electron-builder": "^21.2.0",
    "electron-devtools-installer": "^2.2.4",
    "eslint": "^6.7.2",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-flowtype": "^4.5.2",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-standard": "^4.0.1",
    "execa": "^3.4.0",
    "express": "^4.17.1",
    "file-loader": "^5.0.2",
    "flow-bin": "^0.113.0",
    "flow-typed": "^2.6.2",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "listr": "^0.14.3",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "style-loader": "^1.0.1",
    "url-loader": "^3.0.0",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10",
    "webpack-dev-middleware": "^3.7.2",
    "webpack-hot-middleware": "^2.25.0",
    "webpack-node-externals": "^1.7.2",
    "webpackbar": "^4.0.0",
    "yargs": "^15.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn ci"
    }
  },
  "lint-staged": {
    "*.js": [
      "yarn prettier",
      "git add"
    ]
  }
}
